public class Solution {
    public int LengthOfLastWord(string s) {
      int len = 0; 
  
        // String a is 'final'-- can 
        // not be modified So, create 
        // a copy and trim the 
        // spaces from both sides 
        string x = s.Trim(); 
  
        for (int i = 0; i < x.Length; i++) { 
            if (x[i] == ' ') { 
                len = 0; 
            } 
            else { 
                len++; 
            } 
        } 
  
        return len; 
    }
}

Example:

Input: "Hello World"
Output: 5
